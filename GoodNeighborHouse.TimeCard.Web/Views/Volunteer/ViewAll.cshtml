@using GoodNeighborHouse.TimeCard.Web.Controllers
@model IEnumerable<GoodNeighborHouse.TimeCard.Web.Models.Volunteer>

@{
    ViewBag.Title = "View Volunteers";
    Layout = "_Layout";
}

    <div class="container py-3">
        <form>
            <table class="col-xl-12">
                <tr>
                    <td><h2>Volunteers</h2></td>
                    <td class="text-right">
                        <input type="submit" name="new" value="New" class="btn btn-outline-success"
                               formaction="/Volunteer/Create" formmethod="get" />
                    </td>
                </tr>
            </table>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var volunteer in Model)
                    {
                        <tr>
                            <td>@volunteer.FirstName @volunteer.LastName</td>
                            <td>@Html.ActionLink(@"Edit", nameof(VolunteerController.Edit), new { id = volunteer.Id }, new { @class = @"btn btn-outline-primary" })</td>
                        </tr>
                    }
                </tbody>
            </table>
        </form>
    </div>