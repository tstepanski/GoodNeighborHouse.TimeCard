@model LoginViewModel

<h2>Login</h2>

<div class="form-group">
    <label>Username</label>
    @Html.TextBoxFor(model => model.Username, new
    {
        @class = @"form-control"
    })
</div>

<div class="form-group">
    <label>Password</label>
    @Html.PasswordFor(model => model.Password, new
    {
        @class = @"form-control"
    })
</div>